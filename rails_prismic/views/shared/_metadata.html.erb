<title><%= full_title(yield(:title)) %></title>

<%= csrf_meta_tags %>
<%= csp_meta_tag %>

<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

<!-- FB Open Graph Metadata -->
<meta property="og:url" content="https://icehotels.org" />
<meta property="og:title" content="<%= full_title(yield(:title)) %>" />
<meta property="og:description" content="<%= meta_description(yield(:page_meta_description)) %>" />
<meta property="og:type" content="article" />
<% if meta_image(yield(:page_meta_image)) %>
	<meta property="og:image" content="<%= meta_image(yield(:page_meta_image)) %>" />
<% else %>
	<meta property="og:image" content="<%= asset_url("facebook-card.png") %>" />
 %>" />
<% end %>

<!-- Twitter Metadata-->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@accountable_us">
<meta name="twitter:creator" content="@accountable_us">
<meta name="twitter:title" content="<%= full_title(yield(:title)) %>" />
<meta name="twitter:description" content="<%= meta_description(yield(:page_meta_description)) %>" />
<% if meta_image(yield(:page_meta_image)) %>
	<meta name="twitter:image" content="<%= meta_image(yield(:page_meta_image)) %>" />
<% else %>
	<meta name="twitter:image" content="<%= asset_url("twitter-card.png") %>">
<% end %>

<!-- HTML Metadata-->
<title><%= full_title(yield(:title)) %></title>
<meta name="author" content="Accountable.us">
<meta name="description" content="<%= meta_description(yield(:page_meta_description)) %>">
<meta name="keywords" content="<%= meta_keywords(yield(:page_meta_keywords)) %>">
<link rel="canonical" href="https://icehotels.org" />